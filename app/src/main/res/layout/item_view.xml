<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="Article"
            type="com.example.android.tugasmobile.network.Article" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/mars_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:padding="2dp"
        app:imageUrl="@{Article.media.get(0).mediaMetaData.get(2).imageUrl}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        android:contentDescription="TODO" />
    <TextView
        android:id="@+id/image_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{Article.media.get(0).copyright}"
        app:layout_constraintTop_toBottomOf="@id/mars_image"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{Article.title}"
        app:layout_constraintTop_toBottomOf="@id/image_credit"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/article_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{Article.abstract}"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/article_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{Article.publishedDate}"
        app:layout_constraintTop_toBottomOf="@id/article_description"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/article_date"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>